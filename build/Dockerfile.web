FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

RUN pip install uv

COPY pyproject.toml .
RUN uv pip install --system -r pyproject.toml

CMD ["uv", "run", "daphne", "-b", "0.0.0.0", "-p", "8000", "elearning.asgi:application"]